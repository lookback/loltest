{
  "name": "loltest",
  "version": "1.1.2",
  "description": "Minimal test runner",
  "author": "Martin Algesten",
  "bin": {
    "loltest": "./cli.js"
  },
  "main": "build/cjs/index.js",
  "module": "build/es6/index.js",
  "scripts": {
    "pretest": "npm run lint",
    "test": "./cli.js",
    "lint": "tslint --project .",
    "build": "npm run build-cjs & npm run build-es6",
    "build-cjs": "tsc --module commonjs --outDir build/cjs",
    "build-es6": "tsc --module es6 --outDir build/es6"
  },
  "devDependencies": {
    "@types/node": "^10.12.18",
    "tslint": "^5.15.0",
    "tslint-immutable": "^5.1.0",
    "typescript": "^3.2.4"
  },
  "dependencies": {
    "ts-node": "^8.0.1"
  }
}
