{
  "extends": [
    "tslint-immutable"
  ],
  "rules": {
    "no-var-keyword": true,
    "typedef": [
      true,
      "call-signature"
    ],
    "max-line-length": [
      true,
      100
    ],
    "semicolon": [
      true,
      "always"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "ignore",
          "typeLiterals": "always",
          "imports": "always",
          "exports": "always"
        }
      }
    ],
    // Immutability rules
    "readonly-keyword": false,
    "readonly-array": false,
    "no-let": true,
    "no-object-mutation": true,
    // Functional style rules
    "no-mixed-interface": false,
    "no-expression-statement": false,
    "ignore-local": false
  }
}
